@model NewsModel
@{
    ViewData["Title"] = "Top news";
    List<NewsModel> news = (List<NewsModel>)ViewData["news"];
}

<div class="jumbotron">
    @{
        string page = news.Select(oneNews => oneNews.Page.ToString()).First();
        int next = int.Parse(page) == 10 ? int.Parse(page) : int.Parse(page) + 1;
        int prev = int.Parse(page) == 1 ? 1 : int.Parse(page) - 1;
    }

    <div>
        <p><a href="/home/topnews/@next">Next</a></p>
        <p><a href="/home/topnews/@prev">Previous</a></p>
    </div>
    <div class="row">
        @foreach (var oneNews in news)
        {
            string author = @oneNews.Author.ToString() != string.Empty ? @oneNews.Author.ToString() : "No Author";
            <div class="col-md-4">
                <a href="@oneNews.Url" target="_blank">
                    <h2>@oneNews.Title.ToString()</h2>
                </a>
                Author: <em>@author</em>
                <p>@oneNews.TimeAgo.ToString()</p>
            </div>
        }
    </div>
</div>